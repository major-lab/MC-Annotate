dnl Process this file with autoconf to produce a configure script.


AC_INIT(annotate.h)
AC_CONFIG_HEADER(config.h)

PACKAGE=annotate
VERSION=1.2
AC_DEFINE_UNQUOTED(PACKAGE, "$PACKAGE")
AC_DEFINE_UNQUOTED(VERSION, "$VERSION")

AC_PROG_MAKE_SET

AC_LANG_CPLUSPLUS
AC_C_BIGENDIAN
AC_PROG_CXX
AC_CANONICAL_HOST

AC_PROG_INSTALL
AC_PATH_PROG(AR,ar)
AC_CHECK_FUNCS(strsep)
AC_CHECK_FUNCS(isfdtype)
AC_CHECK_FUNCS(acosf)
AC_CHECK_FUNCS(sqrtf)

AC_MSG_CHECKING(for fstreambase)
AC_CACHE_VAL(ac_cv_have_fstreambase, 
             AC_TRY_COMPILE([#include <fstream.h>], 
                            fstreambase f;, 
                            ac_cv_have_fstreambase="yes", 
                            ac_cv_have_fstreambase="no"))
if test $ac_cv_have_fstreambase = "yes"; then
    AC_DEFINE(HAVE_FSTREAMBASE)
fi
AC_MSG_RESULT($ac_cv_have_fstreambase)


AC_CACHE_CHECK(whether the compiler has numeric_limits<T>,
ac_cv_cxx_have_numeric_limits,
[AC_LANG_SAVE
 AC_LANG_CPLUSPLUS
 AC_TRY_COMPILE([#include <limits> 
 using namespace std; 
 ],[double e = numeric_limits<double>::epsilon(); return 0;],
 ac_cv_cxx_have_numeric_limits=yes, ac_cv_cxx_have_numeric_limits=no)
 AC_LANG_RESTORE
])
if test "$ac_cv_cxx_have_numeric_limits" = yes; then
  AC_DEFINE(HAVE_NUMERIC_LIMITS,,[define if the compiler has numeric_limits<T>])
fi


AC_CHECK_LIB(z, main)
AC_CHECK_LIB(m, main)
AC_CHECK_LIB(mccore, main)

if eval "test -z \"`echo $GXX`\""; then # not gnu compiler
    case "$host" in
    *-sgi-*)
        CXXSHFLAGS="$CXXFLAGS -O2 -woff 1681 -woff 3303 -ptused"
	CXXFLAGS="$CXXFLAGS -O2 -woff 1681 -woff 3303 -ptused"
  	DEPFLAGS="-M"
	echo "appending values of CPLUS_INCLUDE_PATH to include path..."
	for t in `echo $CPLUS_INCLUDE_PATH | sed "s/\.*:/ /g"`; do
	  CXXSHFLAGS="$CXXSHFLAGS -I$t";
	  CXXFLAGS="$CXXFLAGS -I$t";
 	  DEPFLAGS="$DEPFLAGS -I$t";
	  echo "        " $t;
	done
  	LDFLAGS=
	echo "appending values of LIBRARY_PATH to lib path..."
	for t in `echo $LIBRARY_PATH | sed "s/\.*:/ /g"`; do
	  LINKOPTIONS="$LINKOPTIONS -L$t";    
	  echo "        " $t;
	done
	;;
    *-sun-*)
        CXXSHFLAGS="$CXXFLAGS -O2 -fPIC"
	CXXFLAGS="$CXXFLAGS -O2"
	DEPFLAGS="-MM"
        LDFLAGS="-static $LDFLAGS"
        LINKOPTIONS= ;;
    esac;
elif eval "test \"`echo $GXX`\" = yes"; then     # gnu compiler
	CXXSHFLAGS="$CXXFLAGS -Wall";
	CXXFLAGS="$CXXFLAGS -Wall";
	DEPFLAGS="-MM"
	LDFLAGS="-static $LDFLAGS"
	LINKOPTIONS=;
fi


AC_ARG_WITH(malloc,
[  --with-malloc           replace STL allocator with malloc],
AC_DEFINE(__USE_MALLOC),
)

AC_SUBST(PACKAGE)
AC_SUBST(VERSION)
AC_SUBST(CXXSHFLAGS)
AC_SUBST(DEPFLAGS)
AC_SUBST(LDFLAGS)
AC_SUBST(LINKOPTIONS)

AC_OUTPUT( Makefile, echo timestamp > stamp-h )
